<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/video_item_bg"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/corners_bg_color_normal"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/avatar"
        android:layout_width="98dp"
        android:layout_marginLeft="2dp"
        android:layout_height="55dp"
        android:layout_centerVertical="true"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/avatar"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="Top Gun: Maverick - Official Trailerâ€¦"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_alignLeft="@+id/title"
        android:layout_marginTop="6dp"
        android:text="1.8M Views"
        android:textColor="#707070"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_alignTop="@+id/views"
        android:layout_alignBottom="@+id/views"
        android:layout_toRightOf="@+id/views"
        android:gravity="center_vertical"
        android:layout_marginLeft="6dp"
        android:background="@drawable/corners_bg_textview_color"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:text="12min"
        android:textColor="#111111"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/resolution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_alignTop="@+id/avatar"
        android:layout_alignRight="@+id/avatar"
        android:gravity="center_vertical"
        android:layout_marginLeft="6dp"
        android:background="@drawable/corners_bg_textview_color"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:text="1080p"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:textColor="#FFFFFF"
        android:textSize="10sp" />
</RelativeLayout>